@using PagedList
@using PagedList.Mvc
@using Blog_Web.Models.classes
@model IPagedList<SistemText>
@{
    ViewBag.Title = "sistemyazilist";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SistemTextID</td>
            <td>@item.Title</td>
            <td><a href="/Admin/sistemyaziGetir/@item.SistemTextID" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-info">Detay</a></td>
            <td><a href="/Admin/sistemyaziSil/@item.SistemTextID" class="btn btn-danger">Sil</a></td>


        </tr>
    }

</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("sistemyazilist", new { sayfa }), new PagedListRenderOptions
{
    LiElementClasses = new List<string>
    {"page-link"}
})

<a href="/Admin/sistemyeniYazi/" class="btn btn-info">Yeni Yazı Ekle</a>


