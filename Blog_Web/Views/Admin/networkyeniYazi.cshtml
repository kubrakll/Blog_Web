@model Blog_Web.Models.classes.NetworkText
@{
    ViewBag.Title = "networkyeniYazi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("networkyeniYazi", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-group" method="post">
        @if (Model != null)
        {
            <input type="hidden" name="IsActive" value="true" />
        }
        @Html.Label("Yazi Başlığı")
        @Html.TextAreaFor(x => x.Title, new { @class = "form-control" })
        <br />
        @Html.Label("Görünecek Kısa Açıklama")
        @Html.TextAreaFor(x => x.CoverLetter, new { @class = "form-control" })
        <br />
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", id = "summernote" })
        <br /><br />
        @Html.Label("Yazi Tarihi")
        @Html.TextBoxFor(m => m.TextDate, "{0:dd/MM/yyyy}")
        <br />
        @Html.Label("Kaynak 1")
        @Html.TextAreaFor(x => x.source1, new { @class = "form-control" })
        <br />
        @Html.Label("Kaynak 2")
        @Html.TextAreaFor(x => x.source2, new { @class = "form-control" })
        <br />
        @Html.Label("Kaynak 3")
        @Html.TextAreaFor(x => x.source3, new { @class = "form-control" })
        <br />
        @Html.Label("Kaynak 4")
        @Html.TextAreaFor(x => x.source4, new { @class = "form-control" })
        <br />
        @Html.Label("Kaynak 5")
        @Html.TextAreaFor(x => x.source5, new { @class = "form-control" })
        <br />
        @Html.Label("Kaynak 6")
        @Html.TextAreaFor(x => x.source6, new { @class = "form-control" })
        <br />
        @Html.Label("Image")
        <input type="file" name="dosya" value="" />
        <br /><br />
        <button class="btn btn-primary">Ekle</button>
        <br /><br />

    </form>

}
