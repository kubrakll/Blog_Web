@using PagedList
@using PagedList.Mvc
@using Blog_Web.Models.classes
@model IPagedList<About>

@{
    ViewBag.Title = "aboutlist";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.Tittle</td>
            <td><a href="/Admin/AboutGetir/@item.AboutID" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-info">Detay</a></td>
           
        </tr>
    }

</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("aboutlist", new { sayfa }), new PagedListRenderOptions
{
    LiElementClasses = new List<string>
    {"page-link"}
})

<a href="/Admin/yeniabout/" class="btn btn-info">Yeni ekle</a>

